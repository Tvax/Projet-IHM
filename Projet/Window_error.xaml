<Window x:Class="Projet.Window_error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet"
        mc:Ignorable="d"
        Title="Error" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>

        <Label Content="{Binding Error}" Margin="5,5,5,50" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Image Source="{Binding Image}" Margin="5,5,200,50" VerticalAlignment="Center" HorizontalAlignment="Center"/>

    </Grid>
</Window>
