<Window x:Class="Projet.Window_colorPicker"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet"
        mc:Ignorable="d"
        Title="Window_colorPicker" Height="100" Width="200" Background="{Binding User.Theme}">
    <Grid>

        <StackPanel HorizontalAlignment="Center">
            <Label Content="Theme Color:"/>
            <TextBox Text="{Binding User.Theme}"/>
            <Button Content="OK" Command="{Binding OKCommand}"/>
        </StackPanel>
        
    </Grid>
</Window>